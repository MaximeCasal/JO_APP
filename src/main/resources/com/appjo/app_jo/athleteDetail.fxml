<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.appjo.app_jo.Controlleur.AthleteDetailController">
    <children>
        <ImageView fx:id="athleteImage" fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
        <Text fx:id="athleteName" style="-fx-font-size: 18;" />
        <ListView fx:id="athleteDetailsList" prefHeight="200.0" prefWidth="300.0" />
        <HBox spacing="10">
            <Button text="Close" onAction="#handleClose" />
            <Button text="Download PDF" onAction="#handleDownloadPdf" />
        </HBox>
    </children>
</VBox>


